                "responses": {
                    "202": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Ok, price $id delete"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "tags": [ "Цена" ],
                "summary": "Восстановить Прайс",
                "security": [{ "api_key": [] }],
                "parameters": [
                    { "name": "id", "in": "path", "description": "", "schema": { "type": "number" }, "required": true }
