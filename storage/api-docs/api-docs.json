                                    "title_kk": { "type": "string" },
                                    "price": { "type": "number" },
                                    "tags": { "type": "array", "items": { "type": "string" } },
                                    "discount": { "type": "number" },
                                    "comment": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Создано",
