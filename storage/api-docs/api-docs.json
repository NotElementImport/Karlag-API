                    }
                }
            }
        },
        "/api/v1/price/batch": {
            "post": {
                "tags": [ "Группа для Прайслиста" ],
                "summary": "Создать Группу и Прайс к группе",
                "security": [{ "api_key": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title_ru": { "type": "string" },
                                    "title_kk": { "type": "string" },
                                    "prices": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "title_ru": { "type": "string" },
                                                "title_kk": { "type": "string" },
                                                "price": { "type": "number" },
                                                "tags": { "type": "array", "items": { "type": "string" } },
                                                "discount": { "type": "number" },
                                                "comment": { "type": "string" }
