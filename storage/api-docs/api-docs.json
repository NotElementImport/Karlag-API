                    { "name": "Accept-Language", "in": "header", "required": true, "description": "Язык", "schema": { "enum": [ "kk", "ru" ] } }
                ],
                "responses": {
                    "200": {
                        "description": "Успешно",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "discount": 0,
                                        "price": 0,
                                        "title": "",
                                        "tags": [
                                            "string"
                                        ],
                                        "comment": "string",
                                        "final_price": 0
